extends layout

block content
        .panel.panel-default
            .panel-heading Device Control
            .panel-body        
                 
                form(action='/telemetry', method='post', id='formb')
                    fieldset
                        .form-group.row
                            .col-sm-1
                                button.btn.btn-space.btn-default(type='submit', name="action", form='formb', value='start') start tele
                            .col-sm-1
                                button.btn.btn-space.btn-default(type='submit', name="action", form='formb', value='stop') stop tele
                            .col-sm-1
                                button.btn.btn-space.btn-danger(type='submit', name="action", form='formb', value='fault') simulate fault                               


        
